<Application x:Class="BohaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BohaWpf"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ButtonTheme.xaml" />
                <ResourceDictionary Source="Themes/ComboBoxTheme.xaml" />
                <ResourceDictionary Source="Themes/DatePickerTheme.xaml" />
                <ResourceDictionary Source="Themes/LabelTheme.xaml" />
                <ResourceDictionary Source="Themes/ListViewTheme.xaml" />
                <ResourceDictionary Source="Themes/TextBlockTheme.xaml" />
                <ResourceDictionary Source="Themes/TextBoxTheme.xaml" />
                <ResourceDictionary Source="Themes/WindowTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>